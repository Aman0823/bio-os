
.head{
		height: 60rpx;
		margin: 20rpx;
		display: flex;
		font-size: 28rpx;
}
.head .left{
		display: flex;
}
.head .right{
		display: flex;
		padding-left: 150rpx;
}
.head .title{
		margin-right: 10rpx;
		padding-top: 10rpx;
}
.head .picker{
		border-style: solid;
		padding-left: 30rpx;
		width: 160rpx;
		height: 58rpx;
		border-radius: 0.5em;
		border-color: #cccccc;
		border-width: 4rpx;
		display: flex;
		justify-content: space-between;
}
.head .pick{
		padding-top: 6rpx;
}
.head .icon{
		width: 26rpx;
		height: 26rpx;
		padding-top: 15rpx;
		padding-right: 13rpx;
}
.list-item{
		display: block;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		height: 90rpx;
		width: 700rpx;
		padding: 20rpx;
		border-bottom: 1rpx solid #b4b4b4;
}
.item-left{
		
		float: left;
		display: flex;
		padding-top: 20rpx;
}
.item-right{
		float: right;
		color: #808080;
		display: flex;
		padding-top: 20rpx;
		justify-content: space-between;
}
.ico{
		width: 30rpx;
		height: 30rpx;
		padding-top: 8rpx;
		margin-left: 10rpx;
}
.red-dot{
		border-radius: 360%;
		width: 10rpx;
		height: 10rpx;
		background-color: #b50000;
}
